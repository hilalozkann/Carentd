@{
}
@model RentProject.Models.User
<body style="background-image: url('https://www.dejavurentacar.com/wp-content/uploads/2019/02/Antalya-Rent-A-Car-Firmaları.jpg')"/>
<h1 style="color:white">Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label" style="color:white">E-mail</label>
                <input asp-for="email" class="form-control" placeholder="Email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label" style="color:white">Password</label>
                <input asp-for="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>    
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}